@using Microsoft.AspNetCore.Components.Authorization

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">

                <NotAuthorized>
                    <LayoutView Layout="@typeof(LoginLayout)">
                        <div class="d-flex flex-column align-center justify-center" style="height:100vh">
                            <MudText Typo="Typo.h3" Color="Color.Error" GutterBottom="true">Acesso Negado</MudText>
                            <MudText>Você não tem permissão para ver esta página.</MudText>
                            <MudButton Href="/login" Variant="Variant.Filled" Color="Color.Primary" Class="mt-4">Voltar ao Login</MudButton>
                        </div>
                    </LayoutView>
                </NotAuthorized>

                <Authorizing>
                    <div class="d-flex justify-center mt-4">
                        <MudText>Verificando credenciais...</MudText>
                    </div>
                </Authorizing>

            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>

        <NotFound>
            <PageTitle>Não encontrado</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudAlert Severity="Severity.Error">Página não encontrada!</MudAlert>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>