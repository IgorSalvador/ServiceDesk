@inherits LayoutComponentBase
@using ServiceDesk.Web.Services.Auth
@inject AuthService AuthService
@inject NavigationManager Navigation

<MudThemeProvider Theme="Configuration.Theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Border="true" Color="Color.Surface" Fixed="true">

        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Primary"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />

        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Class="ml-3">
            <MudIcon Icon="@Icons.Material.Filled.DisplaySettings" Color="Color.Primary" />
            <MudText Typo="Typo.h6" Color="Color.Primary" Style="font-weight: 700;">
                Helpdesk <span style="font-weight: 300; color: var(--mud-palette-text-secondary);">Enterprise</span>
            </MudText>
        </MudStack>

        <MudSpacer />

        <AuthorizeView>
            <Authorized>
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="4">
                    <MudHidden Breakpoint="Breakpoint.SmAndDown">
                        <MudStack Spacing="0" AlignItems="AlignItems.End">
                            <MudText Typo="Typo.body2" Style="font-weight: 600;">@context.User.Identity?.Name</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">Conectado</MudText>
                        </MudStack>
                    </MudHidden>

                    <MudAvatar Color="Color.Primary" Variant="Variant.Outlined">
                        @context.User.Identity?.Name?.FirstOrDefault().ToString().ToUpper()
                    </MudAvatar>

                    <MudTooltip Text="Sair do Sistema">
                        <MudIconButton Icon="@Icons.Material.Filled.Logout"
                                       Color="Color.Secondary"
                                       OnClick="LogoutAsync" />
                    </MudTooltip>
                </MudStack>
            </Authorized>
        </AuthorizeView>

    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               ClipMode="DrawerClipMode.Always"
               Elevation="0"
               Border="true"
               Breakpoint="Breakpoint.Md"
               PreserveOpenState="true">

        <MudNavMenu Class="pt-4">
            <MudText Typo="Typo.subtitle2" Color="Color.Secondary" Class="px-4 mb-2">GERAL</MudText>

            <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="/tickets" Icon="@Icons.Material.Filled.ConfirmationNumber">Meus Tickets</MudNavLink>

            <MudDivider Class="my-4" />

            <MudText Typo="Typo.subtitle2" Color="Color.Secondary" Class="px-4 mb-2">ADMINISTRAÇÃO</MudText>

            <MudNavGroup Title="Configurações" Icon="@Icons.Material.Filled.Settings" Expanded="false">
                <MudNavLink Href="/queues" Icon="@Icons.Material.Filled.ListAlt">Filas de Atendimento</MudNavLink>
                <MudNavLink Href="/users" Icon="@Icons.Material.Filled.People">Usuários</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="py-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle() => _drawerOpen = !_drawerOpen;

    async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login");
    }
}